{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-md-4 text-center">
            <h2>Statistics:</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total users registered:</h5>
                    <p class="display-4">{{ totalUsers }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Success downloads:</h5>
                    <p class="display-4">{{ totalDownloads }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Failed downloads:</h5>
                    <p class="display-4">{{ totalErrors }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total downloaded:</h5>
                    <p class="display-4">{{ totalSize }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Max file size:</h5>
                    <p class="display-4">{{ maxSize }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}