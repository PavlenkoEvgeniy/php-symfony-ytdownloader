{% extends 'base.html.twig' %}

{% block title %}YoutubeDownload :: Profile{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('error') %}
        <div class="alert alert-danger">{{ flash_error }}</div>
    {% endfor %}

    {% for flash_success in app.flashes('success') %}
        <div class="alert alert-success">{{ flash_success }}</div>
    {% endfor %}

    <div class="d-flex justify-content-between my-4">
        <a class="btn btn-outline-success" href="{{ path('ui_download_index') }}">Go back to downloads</a>
    </div>

    <h1 class="mt-4">Profile of:</h1>
    <h3 class="mt-2 text-success fst-italic">{{ app.user.email }}</h3>
    <h4 class="mt-4">Change password:</h4>

    {{ form_start(form) }}
    {{ form_row(form.currentPassword) }}
    {{ form_row(form.newPassword.first) }}
    {{ form_row(form.newPassword.second) }}
    <div class="d-flex">
        <button type="submit" class="btn btn-warning">Change</button>
        <a class="btn btn-outline-danger ms-auto" href="{{ path('ui_download_index') }}">Cancel</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
