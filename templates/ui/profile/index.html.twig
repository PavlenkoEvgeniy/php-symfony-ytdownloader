{% extends 'base.html.twig' %}

{% block title %}YoutubeDownload :: Profile{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('error') %}
        <div class="alert alert-danger">{{ flash_error }}</div>
    {% endfor %}

    {% for flash_success in app.flashes('success') %}
        <div class="alert alert-success">{{ flash_success }}</div>
    {% endfor %}

    <div class="d-flex justify-content-between my-4">
        <a class="btn btn-outline-success" href="{{ path('ui_youtube_download_index') }}">Downloads</a>
        <a class="btn btn-outline-warning" href="{{ path('app_logout') }}">Logout</a>
    </div>

    <h1 class="mt-4">Profile of:</h1>
    <h4 class="mt-2">{{ app.user.email }}</h4>
    <h3 class="mt-4">Change password:</h3>

    {{ form_start(form) }}
    {{ form_row(form.currentPassword) }}
    {{ form_row(form.newPassword.first) }}
    {{ form_row(form.newPassword.second) }}
    <button type="submit" class="btn btn-primary">Change Password</button>
    {{ form_end(form) }}
{% endblock %}