{% extends 'base.html.twig' %}

{% block title %}Source index{% endblock %}

{% block body %}
    <h1>Source index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Filename</th>
                <th>Filepath</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for source in sources %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ source.filename }}</td>
                <td>{{ source.filepath }}</td>
                <td>{{ source.createdAt ? source.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="d-flex gap-2">
                    <a class="btn btn-primary" href="{{ path('ui_source_download', {'id': source.id}) }}">Download</a>
                    <a class="btn btn-secondary" href="{{ path('ui_source_show', {'id': source.id}) }}">Show</a>
                    <a class="btn btn-warning" href="{{ path('ui_source_edit', {'id': source.id}) }}">Edit</a>
                    {{ include('ui/source/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('ui_youtube_download_index') }}">+ Add new download</a>
{% endblock %}
