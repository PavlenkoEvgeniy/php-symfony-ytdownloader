{% extends 'base.html.twig' %}

{% block title %}Download :: Index
{% endblock %}

{% block body %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    <div class="d-flex justify-content-between my-4">
        <a class="btn btn-outline-success" href="{{ path('ui_source_index') }}">Downloads</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-outline-info" href="{{ path('admin') }}">Admin</a>
        {% endif %}
        {% if is_granted('ROLE_USER') %}
            <a class="btn btn-outline-secondary" href="{{ path('ui_profile_index') }}">Profile</a>
        {% endif %}
        <a class="btn btn-outline-warning" href="{{ path('app_logout') }}">Logout</a>
    </div>
    <h3>Please paste youtube link into the form bellow:</h3><br>
    {{ form(form) }}

    <h3 class="mt-5">Disk Space Available</h3>
    <p>Total: {{ diskSpace.total }}</p>
    <p>Used: {{ diskSpace.used }} ({{ diskSpace.percentage }}%)</p>
    <p>Free: {{ diskSpace.free }}</p>

    <h3 class="mt-5">Downloads in queue</h3>
    <p>Total: {{ queueTaskCount }}</p>
{% endblock %}
